{
  "name": "server-mentorme",
  "version": "1.0.0",
  "description": "Back end repo for MentorMe app",
  "main": "index.js",
  "scripts": {
    "test": "yarn migrate:test && cross-env NODE_ENV=testing mocha 'tests/**/*.js' --exit",
    "test_dev": "cross-env NODE_ENV=testing mocha 'tests/**/*.js' --watch --timeout 5000",
    "coverage": "cross-env NODE_ENV=testing nyc --reporter=text mocha 'tests/**/*.js'",
    "server": "nodemon index.js",
    "start": "node index.js",
    "migrate": "knex migrate:latest",
    "migrate:test": "cross-env NODE_ENV=testing knex migrate:latest",
    "rollback": "knex migrate:rollback",
    "seed": "knex seed:run"
  },
  "author": "Pav0l",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^15.0.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-restricted": "^1.0.4",
    "faker": "^4.1.0",
    "helmet": "^3.18.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^2.4.0",
    "knex-cleaner": "^1.1.4",
    "nodemon": "^1.19.1",
    "pg": "^7.11.0",
    "sqlite3": "^4.0.9",
    "twilio": "^3.32.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "supertest": "^4.0.2"
  }
}
